    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <title>All Products</title>
</head>
<body>
<div class="container">
    <h1><i class="fas fa-camera"></i> Camera Toys</i></h1>
    <form action="/doSearch" method="post">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Name of products: </span>
            </div>
            <input type="text" class="form-control" name="txtName">
            <input type="submit" value="Search">
        </div>
    </form>
    <button type="button" class="btn btn-info" style="margin-bottom: 20px;"><a href="addProduct">Add product</a></button>
    <table class="table table-dark table-striped">
        <thead>
             <tr>
              <th>Id</th>
              <th>Name</th>
              <th>Price</th>
              <th>Quantity</th>
              <th>Date</th>
              <th>Delete</th>
              <th>Update</th>
            </tr>
        </thead>
        {{#each model}}
        <tr>
            <td>{{_id}} </td>
            <td>{{name}}</td>
            <td>{{price}} $</td>
            <td>{{quantity}}</td>
            <td>{{date}}</td>
            <td><a href="/delete?id={{_id}}">Delete</a></td> 
            <td><a href="/updateProduct?id={{_id}}">Update</a></td> 
        </tr>
        {{/each}}
    </table>
</div>
</body>
</html>